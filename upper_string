#include <stdio.h>
#include <string.h>

int main(){	
	int i,num;
	printf("Nhap so sinh vien can viet hoa ten ");
	scanf("%d",&num);
	char names[num][50];
	
	for(i = 0; i < num; i++){
		printf("\nEnter string %d: ", i + 1);
		scanf("%s", names[i]);
	}
	
	for(i = 0; i < num; i++){
		uppername(names[i]);
		printf("\nNew string %d: %s", i + 1, names[i]);
	}
	
	getch();
}


void uppername(char name_arr[]){
	int x;

	for(x = 0; name_arr[x] != '\0'; x++){
		if(name_arr[x] >= 97 && name_arr[x] <= 122)
			name_arr[x] = name_arr[x] - 32;
	}
}
